              <input type="checkbox">
              <label>科学</label>
              <input type="checkbox">
              <label>教育</label>
              <input type="checkbox">
              <label>子育て</label>
              <input type="checkbox">
              <label>政治</label>
              <input type="checkbox">
              <label>自叙伝</label>
              <input type="checkbox">
              <label>料理</label>
              <input type="checkbox">
              <label>歴史</label>
              <input type="checkbox">
              <label>アート</label>
            </div>
            <p>※最低1つ</p>
          </div>
          <div class="readout-book-review">
            <input type="textarea" placeholder="レビュー">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
