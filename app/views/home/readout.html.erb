            <input id="star2" type="radio" name="rate" value="2">
            <label for="star2">★</label>
            <input id="star1" type="radio" name="rate" value="1">
            <label for="star1">★</label>
            <p>評価</p>
          </div>
          <div class="readout-book-category">
            <div>
              <input type="checkbox">
              <label>小説</label>
              <input type="checkbox">
              <label>ビジネス</label>
              <input type="checkbox">
              <label>スポーツ</label>
